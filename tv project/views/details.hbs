<div class="card">
    <h4 class="card-header">
        {{show.name}}
    </h4>
    <div class="row no-gutters">
        <div class="col-md-3">
            <img src={{show.image}} class="card-img" alt="">
        </div>

        <div class="col-md-9">
            <div class="card-body">
                <div class="card-title">
                    Summary:
                </div>
                <div class="card-text">
                    {{{show.summary}}}
                </div>
                <div class="d-flex justify-content-between card-text">
                    Rating: {{show.rating}}
                    <a class="btn btn-info"href={{show.official_site}} target="_blank">Website</a>
                </div>
                <a class="btn btn-primary" href="/">Back</a>
            </div>
        </div>
    </div>
</div>